{% extends 'base.html.twig' %}

{% form_theme formFigure 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>
        {% if editMode %}
            Modification d'une Figure
        {% else %}
            Création d'une Figure
        {% endif %}
    </h1>

    {{ form_start(formFigure) }}
        {{ form_row(formFigure.name, {'attr' : {'placeholder' : "Nom de la Figure"}}) }}
        {{ form_row(formFigure.content, {'attr' : {'placeholder' : "Contenu de la Figure"}}) }}
        {{ form_row(formFigure.summary, {'attr' : {'placeholder' : "Résumé de la Figure"}}) }}
        {{ form_row(formFigure.image)}}
    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter l'Article
        {% endif %}
    </button>

    {{ form_end(formFigure) }}

{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script>
    $(document).ready(function () {
        bsCustomFileInput.init()
    })
</script>
{% endblock %}