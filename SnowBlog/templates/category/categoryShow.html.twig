{% extends "base.html.twig" %}

{% block body %}
<div class="row overflow-auto justify-content-around">
	{% for figure in figures %}
		<article class="mt-nav row col-lg-2 h-25 m-3" id="{{figure.id}}">
			<img src="{{ asset('uploads/home/' ~ figure.image) }}" alt="" width="100%" height="150px" class="mt-3">
			<div class="row w-100 justify-content-between ml-0 bg-white border-top">
				<div>
					<a href="{{ path('blog_show', {'id': figure.id}) }}">{{ figure.name }}</a>
				</div>
				<div>
					{% if app.user %}
						<a href="{{ path('blog_edit', {'id': figure.id}) }}">&#128394;</a>
						<a href="{{ path('delete', {'entity': 'figure', 'id': figure.id}) }}" onclick="return confirm('Etes-vous sur de vouloir supprimer cette figure ?')">
							&#128465;</a>
					{% endif %}
				</div>
			</div>
		</article>
	{% endfor %}
</div>
{% endblock %}
